	journal = {The Astrophysical Journal},
	month = {oct},
	number = {2},
	pages = {900--910},
	publisher = {{IOP} Publishing},
	title = {A Constant Spectral Index for Sagittarius A{\ast} during Infrared/X-Ray Intensity Variations},
