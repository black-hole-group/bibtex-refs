@article{Riordan2016,
	abstract = {Jets are observed as radio emission in active galactic nuclei and during the low/hard state in X-ray binaries (XRBs), but their contribution at higher frequencies has been uncertain. We study the dynamics of jets in XRBs using the general-relativistic magnetohydrodynamic code HARM . We calculate the high-energy spectra and variability properties using a general-relativistic radiative transport code based on grmonty . We find the following signatures of jet emission: (i) a significant γ -ray peak above ∼10 22 Hz, (ii) a break in the optical/UV spectrum, with a change from ##IMG## [http://ej.iop.org/images/0004-637X/819/2/95/apj522745ieqn1.gif] {$\nu {L}_{\nu }\sim {\nu }^{0}$} to ##IMG## [http://ej.iop.org/images/0004-637X/819/2/95/apj522745ieqn2.gif] {$\nu {L}_{\nu }\sim \nu $} , followed by another break at higher frequencies where the spectrum roughly returns to ##IMG## [http://ej.iop.org/images/0004-637X/819/2/95/apj522745ieqn3.gif] {$\nu {L}_{\nu }\sim {\nu }^{0}$} , and (iii) a pronounced synchrotron peak near or below ∼10 14 Hz indicates that a significant fraction of any observed X-ray emission originates in the jet. We investigate the variability during a large-scale magnetic field inversion in which the Blandford--Znajek (BZ) jet is quenched and a new transient hot reconnecting plasmoid is launched by the reconnecting field. The ratio of the γ -rays to X-rays changes from ##IMG## [http://ej.iop.org/images/0004-637X/819/2/95/apj522745ieqn4.gif] {${L}_{\gamma }/{L}_{{\rm{X}}}\gt 1$} in the BZ jet to ##IMG## [http://ej.iop.org/images/0004-637X/819/2/95/apj522745ieqn5.gif] {${L}_{\gamma }/{L}_{{\rm{X}}}\lt 1$} during the launching of the transient plasmoid.},
	author = {Michael O'Riordan and Asaf Pe'er and Jonathan C. McKinney},
