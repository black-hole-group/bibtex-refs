	journal = {\mnras},
	keywords = {accretion, accretion discs, black hole physics, hydrodynamics, instabilities, gamma-rays: bursts},
	month = aug,
	pages = {383-400},
	title = {{The runaway instability of thick discs around black holes - I. The constant angular momentum case}},
